@model IEnumerable<DogGo.Models.Walker>

@{
    ViewData["Title"] = "Index";
}

<h1>Walkers in your Neighborhood</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="d-flex flex-row flex-wrap justify-content-around">
        @foreach (var item in Model)
        {

            <div class="card border-bottom p-3 mb-2 bg-secondary" style="width: 18rem;">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Number of Walks</p>
                    <a class="btn btn-primary nav-link" asp-area="" asp-controller="Walkers" asp-action="Details">Walkers</a>
                    @*<a href="#" class="btn btn-primary">Details</a>*@
                </div>
            </div>
        }
